@model List<Employees.Models.Employee>

<h2>Employee List</h2>

<table id="employeeTable" class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Department</th>
            <th>Salary</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Dob.ToShortDateString()</td>
                <td>@employee.Dept</td>
                <td>@employee.Salary.ToString("C")</td>
                <td>
                    <a id="detailsLink_@employee.Id" asp-action="Details" asp-route-id="@employee.Id">Details</a> |
                    <a id="editLink_@employee.Id" asp-action="Edit" asp-route-id="@employee.Id">Edit</a> |
                    <a id="deleteLink_@employee.Id" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a id="addEmployeeLink" asp-action="Create">Add New Employee</a>

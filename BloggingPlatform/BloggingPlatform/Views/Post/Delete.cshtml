@model BloggingPlatform.Models.Post

@{
    Layout = "_Layout";
}

<h2>Delete Post</h2>
<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <p>Are you sure you want to delete this post?</p>
    <input type="submit" value="Delete" />
    <a href="@Url.Action("Index")">Cancel</a>
</form>

@model List<BloggingPlatform.Models.Post>

@{
    Layout = "_Layout";
}

<h2>All Posts</h2>
<ul>
    @foreach (var post in Model)
    {
        <li>
            <a href="@Url.Action("Details", new { id = post.Id })">@post.Title</a>
        </li>
    }
</ul>
<a href="@Url.Action("Create")">Create New Post</a>
